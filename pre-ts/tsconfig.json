{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node10",
    "declaration": true,
        "declarationDir": "./dist",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
  },
  
  
  "include": ["src"],
  "exclude": ["node_modules", "dist", "coverage", "test",  "**/*.test.ts",
  "**/*.spec.ts", 
  "**/__tests__/*",
  "**/__mocks__/*",]
  
} 